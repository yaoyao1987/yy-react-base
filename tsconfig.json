{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "es2017"],
    "paths": {
      "yy-react-base": [
        "src/components/index.tsx"
      ],
      "yy-react-base/es/*": [
        "src/components/*"
      ],
      "yy-react-base/lib/*": [
        "src/components/*"
      ],
      "@util": [
        "src/components/_util"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "tests/setupTests.ts"
  ],
  "exclude": [
    "node_modules",
    "types",
    "lib",
    "es"
  ]
}